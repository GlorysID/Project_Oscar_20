/* Profile Wrapper: 2 Kolom */
.profile-wrapper {
  display: flex;
  gap: 40px;
  justify-content: center;
  align-items: flex-start;
  width: 100%;
  max-width: 900px;
  margin: 60px auto 0 auto;
  z-index: 3;
  margin-top: 0px; /* Ubah dari 20px ke 0px agar lebih ke atas */
  position: relative;
}

/* Kolom kiri: Avatar + Achievements */
.profile-left-col {
  display: flex;
  flex-direction: column;
  gap: 32px;
  min-width: 320px;
  max-width: 370px;
  height: 100%;
  flex: 1;
}

/* Avatar & Achievements tinggi sama */
.profile-avatar,
.achievements-container {
  min-width: 320px;
  max-width: 370px;
  height: 50%; /* Biar dua-duanya bagi tinggi kolom */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

/* Kolom kanan: Profile Form */
.profile-right-col {
  flex: 2;
  min-width: 340px;
  max-width: 600px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* Avatar Container */
.profile-avatar {
  background: linear-gradient(135deg, #4c1d95 0%, #312e81 100%);
  border-radius: 32px;
  box-shadow: 0 0 40px 0 rgba(140, 80, 255, 0.18), 0 0 0 8px rgba(140,80,255,0.08);
  padding: 48px 32px 32px 32px;
  min-width: 320px;
  max-width: 370px;
  height: 370px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: relative;
  
}

.avatar-img {
   width: 180px;
  height: 180px;
  border-radius: 50%; /* Lebih bulat */
  margin-bottom: 24px;
  object-fit: cover;
  box-shadow: 0 0 24px #8b5cf6;
  transition: width 0.2s, height 0.2s;
}

.btn-avatar, .btn-avatar-delete {
  width: 170px;
  padding: 10px 0;
  margin-bottom: 12px;
  border-radius: 12px;
  border: none;
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: background 0.2s;
}
.btn-avatar {
  background: #8b5cf6;
  color: #fff;
}
.btn-avatar-delete {
  background: #3b0a2a;
  color: #fff;
}
.avatar-info {
  margin-top: 18px;
  font-size: 0.95em;
  color: #d1d5db;
  text-align: center;
}

.avatar-size-label {
  margin-top: 8px;
  color: #c4b5fd;
  font-size: 1em;
  font-family: 'Poppins', sans-serif;
}
.avatar-size-slider {
  width: 120px;
  margin-top: 4px;
  accent-color: #8b5cf6;
}

/* Form Container */
.profile-form {
  background: linear-gradient(135deg, #1e1b4b 0%, #312e81 100%);
  border-radius: 32px;
  box-shadow: 0 0 40px 0 rgba(140, 80, 255, 0.18), 0 0 0 8px rgba(140,80,255,0.08);
  padding: 48px 40px 32px 40px;
  flex: 1;
  min-width: 340px;
  max-width: 600px;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.profile-form label {
  font-family: 'Montserrat', sans-serif;
  font-weight: 700;
  margin-top: 18px;
  margin-bottom: 8px;
  font-size: 1.1em;
  color: #fff;
  display: block;
}

.profile-form input {
  width: 100%;
  padding: 14px 18px;
  border-radius: 16px;
  border: 2px solid #312e81;
  background: #18122b;
  color: #fff;
  font-size: 1.05em;
  margin-bottom: 12px;
  font-family: 'Poppins', sans-serif;
  box-shadow: 0 0 8px #a855f7;
}


.badge {
  background: #18122b;
  border-radius: 12px;
  padding: 8px;
  display: inline-block;
  box-shadow: 0 0 8px #8b5cf6;
}
.badge img {
  width: 32px;
  height: 32px;
}

.form-actions {
  display: flex;
  gap: 18px;
  margin-top: 18px;
}
.btn-save, .btn-reset {
  padding: 12px 32px;
  border-radius: 16px;
  border: none;
  font-family: 'Poppins', sans-serif;
  font-weight: 700;
  font-size: 1.05em;
  cursor: pointer;
  transition: background 0.2s;
}
.btn-save {
  background: #8b5cf6;
  color: #fff;
}
.btn-reset {
  background: #18122b;
  color: #fff;
}

/* Samakan tinggi Achievements dengan Avatar */
.achievements-container {
  height: 370px; /* atau gunakan min/max sesuai avatar */
  /* ...style lain tetap... */
}

/* Avatar Crop Modal */
.avatar-crop-modal {
  display: none;
  position: fixed;
  z-index: 9999;
  left: 0; top: 0;
  width: 100vw; height: 100vh;
  background: rgba(20, 16, 40, 0.85);
  align-items: center;
  justify-content: center;
}
.avatar-crop-modal.active {
  display: flex;
}
.avatar-crop-content {
  background: #18122b;
  border-radius: 24px;
  padding: 32px 40px;
  box-shadow: 0 0 32px #8b5cf6;
  position: relative;
  min-width: 320px;
  max-width: 90vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar-crop-close {
  position: absolute;
  top: 18px;
  right: 24px;
  font-size: 2em;
  color: #8b5cf6;
  cursor: pointer;
}
.avatar-crop-preview {
  width: 220px;
  height: 220px;
  border-radius: 50%;
  overflow: hidden;
  background: #312e81;
  margin: 24px 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.avatar-crop-preview img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.2s;
}
.avatar-crop-slider {
  width: 80%;
  margin-bottom: 18px;
  display: flex;
  align-items: center;
  gap: 12px;
  color: #fff;
}
.avatar-crop-actions {
  display: flex;
  gap: 18px;
  margin-top: 12px;
}

/* Tambahkan di main.css atau di <style> tag index.html */
.profile-title {
  width: 100%;
  margin-top: 50px;
  text-align: center;
  font-size: 80px;
  font-family: "Poppins", sans-serif;
  z-index: 2;
  padding-top: 1rem;
  font-weight: 700;
  letter-spacing: 2px;
  color: #fff;
  background: linear-gradient(90deg, #fff 60%, #f472b6 80%, #a855f7 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 0 24px #fff, 0 0 32px #a855f7;
}


/* Responsive */
@media (max-width: 900px) {
  .profile-wrapper {
    flex-direction: column;
    align-items: center;
    gap: 32px;
    max-width: 98vw;
  }
  .profile-left-col,
  .profile-right-col {
    max-width: 98vw;
    width: 100%;
  }
  .profile-left-col {
    flex-direction: row;
    gap: 32px;
    height: auto;
  }
  .profile-avatar,
  .achievements-container {
    height: auto;
    min-width: 0;
    max-width: 100%;
  }
}